<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="225dp"
        android:layout_height="254dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail2"
        android:textColor="@color/black"
        android:layout_width="224dp"
        android:layout_height="34dp"
        android:textColorHint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:background="@drawable/edittext_shatpe"
        android:hint="Enter YOur Email Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="222dp"
        android:layout_height="32dp"
        android:layout_margin="15dp"

        android:background="@drawable/edittext_shatpe"
        android:hint="Password"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail2" />

    <EditText
        android:id="@+id/etUsername2"
        android:layout_width="222dp"
        android:layout_height="32dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="15dp"

        android:background="@drawable/edittext_shatpe"
        android:hint="Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword2" />

    <Button
        android:id="@+id/regiter_btn2"
        android:layout_width="91dp"
        android:layout_height="24dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/aclonica"
        android:onClick="Register"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login_bt2"
        android:layout_width="91dp"
        android:layout_marginTop="146dp"
        android:layout_height="24dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/aclonica"
        android:onClick="Login"
        android:text="Sign In"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
         />


</androidx.constraintlayout.widget.ConstraintLayout>